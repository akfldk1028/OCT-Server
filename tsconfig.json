{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "node16",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/renderer/common/components/*"],
      "@/utils/*": ["./src/renderer/utils/*"],
      "@/hooks/*": ["./src/renderer/hooks/*"],
      "@/lib/*": ["./src/renderer/lib/*"]
    },
    "baseUrl": "."
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll", "node_modules"]
}
