{
  "testConfig": {
    "maxServersToTest": 15,
    "supportedMethods": ["npx", "python"],
    "delayBetweenTests": 5000,
    "maxRetries": 3,
    "timeout": 120000,
    "environment": "test"
  },
  "testCategories": {
    "priority": [
      "file-manager",
      "web-scraper", 
      "git-integration",
      "database-tools",
      "api-client"
    ],
    "excluded": [
      "docker",
      "kubernetes",
      "aws-cli"
    ]
  },
  "retryConfig": {
    "maxRetries": 3,
    "baseDelay": 1000,
    "maxDelay": 10000,
    "exponentialBackoff": true
  },
  "reportConfig": {
    "generateHTML": true,
    "includeScreenshots": false,
    "includeLogs": true,
    "compressionEnabled": true
  },
  "validationRules": {
    "minimumSuccessRate": 70,
    "criticalServers": [
      "filesystem",
      "git", 
      "web-search"
    ],
    "performanceThresholds": {
      "maxInstallTime": 60000,
      "maxDbVerificationTime": 5000,
      "maxUninstallTime": 30000
    }
  }
}